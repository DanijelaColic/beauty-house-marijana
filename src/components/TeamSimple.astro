<section id="tim" class="scroll-mt-16 bg-surface text-textPrimary">
  <div class="mx-auto max-w-6xl px-4 py-10 sm:py-14">
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 gap-4">
      {team.map((m) => (
        <figure class="text-center">
          <div class="overflow-hidden rounded-2xl bg-[#EDE6DD] shadow">
            <img
              src={m.src}
              alt={m.name}
              class="w-full aspect-[4/5] object-cover"
              loading="lazy"
            />
          </div>
          <figcaption class="mt-2 text-sm sm:text-base text-textSecondary">{m.name}</figcaption>
        </figure>
      ))}
    </div>
  </div>
</section>
